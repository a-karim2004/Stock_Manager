    opacity: 0;
    visibility: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
    transition: 0.3s;
    z-index: 9999;
}
/* Lorsque l’ancre est ciblée : afficher le popup */
.popup-overlay:target {
    opacity: 1;
    visibility: visible;
}

